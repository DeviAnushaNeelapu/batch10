<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Seventh">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arizonia"
        android:gravity="center_horizontal"
        android:text="Registration"
        android:textSize="55sp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >
        <EditText
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:hint="First name"
            android:inputType="text"
            android:background="@drawable/shape1"
            android:layout_marginRight="35dp"
            android:padding="10dp"
            android:id="@+id/first"
            android:maxLines="1"

            />
        <EditText
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:hint="last_name"
            android:inputType="text"
            android:background="@drawable/shape1"
            android:padding="10dp"
            android:id="@+id/last"
            android:maxLines="1"/>



    </LinearLayout>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="roll_number"
        android:background="@drawable/shape1"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_baseline_person_25"
        android:id="@+id/roll"
        android:maxLines="1"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="10dp"
        android:background="@drawable/shape1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_baseline_phone_24"
        android:id="@+id/phone"
        android:maxLines="1"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@drawable/shape1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:id="@+id/emailr"
        android:maxLines="1"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@drawable/shape1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:id="@+id/pass"
        android:maxLines="1"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Confirmed Password"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:background="@drawable/shape1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:id="@+id/conform"
        android:maxLines="1"
        />




    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="sign_up"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/shape"
        android:backgroundTint="@color/orange"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:onClick="signupr"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account ?"
            android:layout_marginRight="7dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="loginr"
            />
    </LinearLayout>

</LinearLayout>

</ScrollView>