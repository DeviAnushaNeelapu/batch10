<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dp5"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Eleventh">
    <LinearLayout
        android:id="@+id/l1"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/style"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="155dp"
            android:layout_gravity="center"
            android:scaleType="matrix"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_person" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="AgriTech"
            android:textColor="#F1EDED"
            android:textSize="25sp"
            android:layout_marginTop="12dp"
            app:fontFamily="@font/abhaya_libre_bold" />


        <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint=" Enter Registered Email Id"
            android:inputType="textEmailAddress"
            android:padding="10dp"
           android:background="@drawable/styeles"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColorHint="#000"
            android:drawableRight="@drawable/ic_baseline_email_24"
            android:id="@+id/emailr"
            android:maxLines="1"
            />


        <EditText
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint=" Enter Registered Password"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:background="@drawable/styeles"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColorHint="#000"
            android:drawableRight="@drawable/ic_lock_black_24dp"
            android:id="@+id/pass"
            android:maxLines="1"
            />


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:id="@+id/rg"
        android:src="@drawable/right"
        android:background="@drawable/button_background"
        />
</LinearLayout>

</LinearLayout>

</ScrollView>